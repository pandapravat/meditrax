<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefHeight="641.0" prefWidth="580.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.pravat.meditrax.controller.SalesReportController">
  <bottom>
    <VBox alignment="CENTER" prefHeight="84.0" prefWidth="580.0" spacing="10.0">
      <children>
        <HBox id="HBox" alignment="CENTER_RIGHT" prefHeight="36.0" prefWidth="150.0" spacing="5.0">
          <children>
            <Label prefWidth="76.0" text="Total Sale:">
              <font>
                <Font name="System Bold" size="14.0" fx:id="x1" />
              </font>
              <HBox.margin>
                <Insets />
              </HBox.margin>
            </Label>
            <ImageView fitHeight="13.0" fitWidth="11.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/rupee.gif" />
              </image>
            </ImageView>
            <Label id="totalPriceLbl" fx:id="totalSale" font="$x1" prefWidth="112.0" text="0.0" />
          </children>
          <padding>
            <Insets left="50.0" top="10.0" />
          </padding>
          <VBox.margin>
            <Insets />
          </VBox.margin>
        </HBox>
        <HBox id="HBox" alignment="CENTER" prefHeight="36.0" prefWidth="344.0" spacing="5.0">
          <children>
            <Button mnemonicParsing="false" prefHeight="21.0" prefWidth="76.0" text="Home" onAction="#onHomeButtonClick"/>
            <!-- <Button mnemonicParsing="false" prefHeight="21.0" prefWidth="76.0" text="View Details" onAction="#viewTransactionDetails"/> -->
            <Button mnemonicParsing="false" prefHeight="21.0" prefWidth="76.0" text="Print" onAction="#onPrintButtonAction"/>
          </children>
        </HBox>
      </children>
      <padding>
        <Insets bottom="10.0" top="10.0" />
      </padding>
    </VBox>
  </bottom>
  <center>
    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="510.0" prefWidth="560.0" spacing="20.0" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER" prefHeight="24.0" prefWidth="572.0" spacing="0.0">
          <children>
            <Label prefHeight="24.0" prefWidth="66.0" text="From Date:" />
            <DatePicker fx:id="fromDate" prefHeight="21.0" prefWidth="143.0" />
            <Label prefHeight="24.0" prefWidth="50.0" text="To Date:">
              <HBox.margin>
                <Insets left="10.0" />
              </HBox.margin>
            </Label>
            <DatePicker fx:id="toDate" prefHeight="21.0" prefWidth="143.0" />
            <Button fx:id="goButton" contentDisplay="LEFT" mnemonicParsing="false"
	onAction="#showFilterData" prefHeight="21.0" text="Go" textAlignment="LEFT">
              <HBox.margin>
                <Insets left="20.0" />
              </HBox.margin>
            </Button>
          </children>
        </HBox>
        <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="467.0" prefWidth="560.0" tableMenuButtonVisible="false">
          <columns>
            <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="58.0" text="Sl No" fx:id="slNo" />
            <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="199.0" text="Transaction Id" fx:id="transactionId" />
            <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="199.0" text="Date/Time" fx:id="dts" />
            <TableColumn maxWidth="3000.0" minWidth="10.0" prefWidth="199.0" text="Patient's Name" fx:id="patientName" />
            <TableColumn maxWidth="3000.0" minWidth="10.0" prefWidth="199.0" text="Prescribed By" fx:id="doctorsName" />
            <TableColumn maxWidth="3000.0" minWidth="10.0" prefWidth="199.0" text="Amount" fx:id="amount" />
          </columns>
        </TableView>
      </children>
      <BorderPane.margin>
        <Insets left="10.0" right="10.0" top="20.0" />
      </BorderPane.margin>
    </VBox>
  </center>
  <top>
    <Label alignment="CENTER" blendMode="DARKEN" contentDisplay="LEFT" maxHeight="-1.0" maxWidth="1.7976931348623157E308" prefHeight="39.000099999997474" prefWidth="600.0" styleClass="pageLabel" text="%com.pravat.meditrax.salesrptwinlabel" BorderPane.alignment="TOP_LEFT">
      <font>
        <Font size="18.0" />
      </font>
    </Label>
  </top>
</BorderPane>
